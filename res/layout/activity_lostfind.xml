<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TextTitle"
        android:text="手机防盗界面" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="安全号码:"
        android:textSize="18sp"
        android:textColor="#000000" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="防盗保护是否开启"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerVertical="true" />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lock"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_lostfind_gotosetup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="从新进入设置向导界面"
        android:textSize="22sp"
        android:textColor="#000000" 
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center_vertical"
        android:text="SIM卡变更报警:"
        android:textColor="#000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center_vertical"
        android:text="GPS追踪:#*gps*#"
        android:textColor="#000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center_vertical"
        android:text="远程锁屏:#*lockscreen*#"
        android:textColor="#000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center_vertical"
        android:text="远程清除数据:#*wipedata*#"
        android:textColor="#000000" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:gravity="center_vertical"
        android:text="音乐报警:#*music*#"
        android:textColor="#000000" />

</LinearLayout>