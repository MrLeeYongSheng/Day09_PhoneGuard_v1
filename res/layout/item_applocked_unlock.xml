<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_applocked_unlocked_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_home_gd"
    android:clickable="true"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_item_applocked_unlocked_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/tv_item_applocked_unlocked_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_applocked_unlocked_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="应用名字"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_item_applocked_unlocked_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/selector_applocked_unlocked" 
        />

</RelativeLayout>