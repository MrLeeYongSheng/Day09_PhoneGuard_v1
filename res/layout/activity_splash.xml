<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itheima.day09_phoneguard_v1.SplashActivity" >

	<ImageView 
	    android:id="@+id/iv_splash_luncher_bg"
	    android:src="@drawable/luncher_bg"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
	
	<TextView 
	    android:id="@+id/tv_splash_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:text="优酷版"
	    android:textColor="#000000"/>

	<ProgressBar
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/tv_splash_version" />

	<ProgressBar
	    android:id="@+id/pb_splash_donwloading"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:visibility="gone"
	    android:layout_alignParentBottom="true" />

</RelativeLayout>
